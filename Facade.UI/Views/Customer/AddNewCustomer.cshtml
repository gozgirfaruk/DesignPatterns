@model Facade.UI.DAL.Customer
@{
    ViewData["Title"] = "AddNewCustomer";
}

<h1>Yeni Müşteri Girişi</h1>

<div class="container">

    <form method="post">
        <label>Müşteri Adı</label>
        <input type="text" asp-for="Name" class="form-control"/>
        <br />

        <label>Müşteri Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />

        <label>Müşteri Adresi</label>
        <input type="text" asp-for="Address" class="form-control" />
        <br />
        <label>Müşteri Şehri</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <button class="btn btn-info">Ekle</button>

    </form>
</div>