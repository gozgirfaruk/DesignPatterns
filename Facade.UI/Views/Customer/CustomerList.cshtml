@model List<Facade.UI.DAL.Customer>
@{
    ViewData["Title"] = "CustomerList";
}

<h1>Müşteri Listesi</h1>

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Şehir</th>
            
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CustomerID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>
    <td><a href="/Customer/AddNewCustomer" class="btn btn-primary">Yeni Müşteri</a></td>
</div>