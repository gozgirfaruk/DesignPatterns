@model Facade.UI.DAL.OrderDetail
@{
    ViewData["Title"] = "OrderStart";
}

<h1>Sipariş detay</h1>

<div class="container">
    <form method="post">
        <label>Müşteri ID</label>
        <input type="text" asp-for="CustomerID" class="form-control" />
        <br />

        <label>Ürün ID</label>
        <input type="number" asp-for="ProductID" class="form-control" />
        <br />

        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />

        <label>Ürün Adet/Kg</label>
        <input type="text" asp-for="ProductCount" class="form-control" />
        <br />

        <button class="btn btn-info">Sipariş Oluştur</button>

    </form>
</div>