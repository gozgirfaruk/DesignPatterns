@using Mediator.UI.MediatorPatern.Results
@model List<GetProductQueryResult>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <h2>Ürün Listesi</h2>

    <table class="table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Stok Türü</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.StockType</td>
                <td>@item.Category</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-dark">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-info">Detay</a></td>
            </tr>
        }

    </table>
    <a href="/Product/AddProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
</body>
</html>


